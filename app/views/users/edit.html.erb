<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class="alert">
            <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: @user, local: true do |f| %>
          <div class="my-2">
            <label for = "user_name">Name</label></br>
            <%= f.text_field :name, autofocus: true, id: "name" %>
          </div>
          <div class="my-2">
            <label for = "inputImage">Image</label></br>
            <%= f.attachment_field :profile_image, autofocus: true, id:"inputImage" %>
          </div>
          <div class="my-2">
            <label for = "inputIntroduction">Introduction</label></br>
            <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction" %>
          </div>
          <div class="my-2">
            <%= f.submit "Update User", :class => "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

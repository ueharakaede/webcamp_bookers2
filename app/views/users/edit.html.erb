<% if @user.errors.any? %>
<div class="error_explanation">
  <h3><%= @user.errors.count %>errors prohibited this book from being saved : </h3>
  <% @user.errors.full_messages.each do |message| %>
  <ul>
    <li><%= message %></li>
  </ul>
  <% end %>
</div>
<% end %>

<div class="container">
  <%= form_with model:@user, local:true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
      </div>
      
      <div class="form-group">
        <label for="user-image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      
      <div class="form-group">
        <label for="user_introduction">introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
      </div>
      
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<% end %>
<% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
  </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

        <% @books.each do |f| %>
        <tr>
          <td><%= link_to attachment_image_tag(f.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "80x80"),user_path(f.user.id) %></td>
          <td><%= link_to f.title, book_path(f.id) %></td>
          <td><%= f.body %></td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '50x50' %>
        <table class="table font-weight-bold">
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
        </table>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-dark btn-block my-3" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>

        <h2>New book</h2>
        <%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p class="mt-2">Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit "Create Book", :class => "btn btn-success my-3" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
           <tr>
             <td><%= link_to user_path(book.user_id) do %>
               <%= attachment_image_tag book.user, :profile_image,fallback: "no_image.jpg", size: '50x50' %>
              <% end %> </td>
             <td><%= link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
           </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>

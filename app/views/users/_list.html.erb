<% if book.errors.any? %>
<div class="error_explanation">
  <h3><%= book.errors.count %>errors prohibited this book from being saved : </h3>
  <% book.errors.full_messages.each do |message| %>
  <ul>
    <li><%= message %></li>
  </ul>
  <% end %>
</div>
<% end %>

<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "80x80" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>

    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>

    <tr><% if user.id == current_user.id %></tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <%= link_to " ", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title, autofocus: true, class: "form-control", id:"book_title"%>
</div>
 <div class="form-group">
   <label for="book_opinion">Opinion</label>
   <%= f.text_area :body, autofocus: true, class:"form-control", id:"book_body"%>
 </div>
 <div class="form-group">
   <%= f.submit 'Create Book', class: "btn btn-success" %>
 </div>
 <% end %>
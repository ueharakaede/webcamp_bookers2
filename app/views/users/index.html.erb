<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image,fallback: "no_image.jpg", size: '100x100' %>
        <table class="table font-weight-bold">
          <tr>
            <td>name</td>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= current_user.introduction %></td>
          </tr>
        </table>
        <% if @user.id == current_user.id %>
          <div><%= link_to edit_user_path(@user.id), class: "btn btn-outline-dark btn-block my-3" do %><i class="fas fa-user-cog"></i><% end %></div>
        <% end %>

        <h2>New book</h2>
        <%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p class="mt-2">Opinion</p>
          <%= f.text_area :body %>
          <%= f.submit "Create Book", :class => "btn btn-success my-3" %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: '50x50' %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

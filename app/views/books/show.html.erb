<% if flash[:success] %>
<div class="flash">
  <%= flash[:success] %>
</div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @booknew %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <thead>
        </thead>
        <tr>
          <td>
            <%= link_to attachment_image_tag(@user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "80x80"),user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>

          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
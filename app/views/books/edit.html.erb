<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
            <div class="alert">
              <h2><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <%= form_with model: @book, url: book_path, local: true do |f| %>
        <div class="my-2">
          <label for = "inputTitle">Title</label></br>
          <%= f.text_field :title, autofocus: true, id: "inputTitle" %>
        </div>
        <div class="my-2">
          <label for = "inputBody">Opinion</label></br>
          <%= f.text_area :body, autofocus: true, id: "inputBody" %>
        </div>
        <div class="my-2">
          <%= f.submit "Update Book", :class => "btn btn-success" %>
        </div>
        <% end %>
          <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>
